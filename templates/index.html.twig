{% extends 'base.html.twig' %}

{% block title %}CertiBot - AI assisted Training to Certifications{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <div class="page-header text-center">
                    <h1 class="display-3">CertiBot</h1>
                    <p class="lead">
                        CertiBot is a web application that allows you to train yourself and improve
                        skills on different languages and technologies with multiple choice questions
                        generated by AI! You need to have an API key from OpenAI to use this application.
                    </p>
                </div>
            </div>
        </div>
        <h2 class="card text-center mb-4 py-4 homepage">Available AI-assisted Trainings to Certifications</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg3 g-4">
            <!-- Symfony card -->
            <div class="col">
                <div class="card cert-card h-100">
                    <img src="{{ asset('build/images/symfony-logo.png') }}" class="card-img-top" alt="Symfony Logo">
                    <div class="card-body">
                        <h5 class="card-title">Symfony</h5>
                        <p class="card-text">Train yourself to Symfony certification with multiple choice questions generated by AI!</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex flex-column">
                        <button type="button" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#trainingModal" data-action="start-training">Train with Certibot</button>
                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#versionModal" data-action="exam-topics">Exam Topics</button>
                    </div>
                </div>
            </div>
            <!-- PHP card -->
            <div class="col">
                <div class="card cert-card h-100">
                    <img src="{{ asset('build/images/php-logo.svg') }}" class="card-img-top" alt="PHP logo"/>
                    <div class="card-body">
                        <h5 class="card-title">PHP</h5>
                        <p class="card-text">Train yourself to PHP with multiple choice questions generated by AI!</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <button class="btn btn-primary disabled">Not yet available</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for training duration and Symfony version -->
    {% include 'partials/training_modal.html.twig' %}
    {% include 'partials/version_modal.html.twig' %}

{% endblock %}
