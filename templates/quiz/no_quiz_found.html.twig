{% extends 'base.html.twig' %}

{% block title %}No quiz data found{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-light">
                <h3 class="text-center">No quiz data found!</h3>
            </div>
            <div class="card-body text-center">
                <div class="alert alert-warning mb-4">
                    <p class="lead">No quiz data were found for the Symfony version {{ version }}</p>
                </div>
                <p class="mt-4">Do you want to generate quiz data now?</p>

                <div class="d-flex justify-content-center mt-4">
                    <button id="generateYesButton" class="btn btn-primary me-3" data-version="{{ version }}">Yes</button>
                    <a href="{{ path('app_index') }}" class="btn btn-outline-secondary">No</a>
                </div>
            </div>
        </div>
        <!-- Card displaying progression -->
        <div id="progressCard" class="card shadow mt-4 d-none">
            <div class="card-header bg-light">
                <h4 class="text-center">Generating quiz data...</h4>
            </div>
            <div class="card-body">
                <ul id="progressSteps" class="list-group list-group-flush"></ul>
                <div class="text-center mt-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="mt-2">Elapsed time:></span><span id="timer">0:00</span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}